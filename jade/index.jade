extends ./main.jade

block css
  link(rel='stylesheet' type='text/css' href='css/cityr.css')

block scripts
  script(type='text/javascript' src='js/city.js')
  script(type='text/javascript' src='js/city-layout.js')

block main
  header
    h1
      div#btn-welcome.big-text.iso-raise.iso-press.iso-alizarin
        i.fa.fa-bolt(style='color: yellow')
        | Welcome!
        i.fa.fa-bolt(style='color: yellow')
    svg#city
      defs
        pattern#pat-sidewalk-v(patternUnits='userSpaceOnUse' width='10' height='10')
          rect(width='50' height='10' fill='#f5f1de')
          rect(width='50' height='1' fill='#d5d1be')
        pattern#pat-sidewalk-h(patternUnits='userSpaceOnUse' width='10' height='10')
          rect(width='10' height='50' fill='#f5f1de')
          rect(width='1' height='50' fill='#d5d1be')

      // sidewalks
      rect(x='130' y='0' width='50' height='400' fill='url(#pat-sidewalk-v)')
      rect(x='330' y='0' width='50' height='330' fill='url(#pat-sidewalk-v)')
      rect(x='0' y='160' width='600' height='50' fill='url(#pat-sidewalk-h)')
      rect(x='0' y='310' width='600' height='50' fill='url(#pat-sidewalk-h)')

      // roads
      rect(x='140' y='0' width='30' height='400')
      rect(x='340' y='0' width='30' height='320')
      rect(x='0' y='170' width='600' height='30')
      rect(x='0' y='320' width='600' height='30')
