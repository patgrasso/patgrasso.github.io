*
  margin 0
  border 0
  font-family 'Roboto Mono', sans-serif
  color white

html
  height 100%

body
  height 100%
  width  100%
  background-color #34495e
  background-image linear-gradient(0deg, transparent 24%,
                     rgba(255, 255, 255, .05) 25%,
                     rgba(255, 255, 255, .05) 26%,
                     transparent 27%, transparent 74%,
                     rgba(255, 255, 255, .05) 75%,
                     rgba(255, 255, 255, .05) 76%,
                     transparent 77%, transparent),
                   linear-gradient(90deg, transparent 24%,
                     rgba(255, 255, 255, .05) 25%,
                     rgba(255, 255, 255, .05) 26%,
                     transparent 27%, transparent 74%,
                     rgba(255, 255, 255, .05) 75%,
                     rgba(255, 255, 255, .05) 76%,
                     transparent 77%, transparent)
  background-size 50px 50px


.spec
  font-family 'Quicksand', sans-serif
  font-weight bold

nav, main
  padding 40px 40px
  color white
  vertical-align top


nav
  z-index           5
  position          fixed
  width             300px
  height            calc(100% - 80px)

  h1
    margin-left     3px

  li
    font-size       25px
    font-weight     300

  li, h1 > div
    padding-left    0 !important
    padding-right   0 !important
    padding-bottom  0 !important

  a
    line-height     1.5
    z-index         1
    padding-left    20px
    padding-right   10px
    padding-bottom  10px
    margin-left     -10px
    margin-bottom     -10px

  ul, li, .name-tag, .btn-menu
    width           -webkit-fit-content
    width           -moz-fit-content
    cursor          pointer

  .btn-menu
    display         none
    font-size       20px

  @media screen and (max-width: 850px)
    position        absolute
    width           0
    height          0
    padding-left    50px
    padding-top     30px


    ul, .name-tag
      position                            fixed
      transition-duration                 0.3s
      -webkit-transition-duration         0.3s
      transition-timing-function          ease
      -webkit-transition-timing-function  ease
      margin-left   -100%

    ul
      margin-top    70px

    .show
      margin-left   0

    .btn-menu
      z-index       6
      position      fixed
      right         10px
      top           10px
      display       initial

      /*
  @media screen and (max-device-width: 850px)
    .name-tag, .btn-menu
      font-size     8vw
    li
      font-size     6vw
      */



.overlay
  transition-duration                 0.3s
  -webkit-transition-duration         0.3s
  transition-timing-function          ease
  -webkit-transition-timing-function  ease
  transition-property                 background-color
  -webkit-transition-property         background-color

  z-index   3
  position  fixed
  width     0
  height    0
  background-color rgba(0, 0, 0, 0)

  @media screen and (max-width: 850px),
  screen and (max-device-width: 850px)
    &.show
      width     200%
      height    200%
      background-color rgba(0, 0, 0, 0.3)







h1
  font-weight 300
  font-size   40px

ul
  list-style  none
  padding     3px
  padding-top 20px

a
  text-decoration   none
  &:hover
    text-decoration none

main
  margin-left     300px
  //height calc(100% - 80px)

  > header
    position      relative
    height        100%
    text-align    center

  @media screen and (max-width: 850px)
    margin-left   0
    padding-left  10px
    padding-right 10px

section
  background-color  #f49c12
  padding           15px !important
  margin-bottom     20px

  p
    font-size       20px

h2
  font-weight   300
  font-size     35px
  margin-bottom 20px

.big-text
  font-size           100px
  font-weight         200
  -webkit-user-select none
  -moz-user-select    none
  user-select         none


header > h1
  text-align  center
  width       -webkit-fit-content
  width       -moz-fit-content
  margin      0 auto
  height      150px
  position    relative
  padding     1px



